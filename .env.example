# Environment Configuration
# Copy this file to .env.production, .env.staging, or .env.development
# and update the values according to your environment

# API Configuration
API_BASE=https://api.caregrid.co.uk
PUBLIC_WEB_BASE=https://caregrid.co.uk
N8N_BASE=https://n8n.caregrid.co.uk

# Frontend URLs
FRONTEND_URL=https://caregrid.co.uk
NEXT_PUBLIC_API_BASE_URL=https://api.caregrid.co.uk

# Database Configuration
DATABASE_URL=postgresql://caregrid_user:your_password@your_host:5432/caregrid
EXTERNAL_DATABASE_URL=postgresql://caregrid_user:your_password@your_external_host:5432/caregrid

# Vapi Webhook URLs
VAPI_TOOLS_WEBHOOK=https://n8n.caregrid.co.uk/webhook/caregrid/voice/tools
VAPI_EVENTS_WEBHOOK=https://n8n.caregrid.co.uk/webhook/caregrid/voice/events

# CDN Configuration
CDN_BASE_URL=https://caregrid.co.uk

# Email Configuration
EMAIL_SERVICE=production
EMAIL_FROM=noreply@caregrid.co.uk
EMAIL_REPLY_TO=support@caregrid.co.uk
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# SMS Configuration
SMS_PROVIDER=production
SMS_API_URL=https://api.your-sms-provider.com
SMS_API_KEY=your_sms_api_key

# Supabase Configuration (if using Supabase)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# Security Configuration
NODE_ENV=production
TRUST_PROXY=true

# CORS Origins (comma-separated)
CORS_ORIGINS=https://caregrid.co.uk,https://www.caregrid.co.uk,https://n8n.caregrid.co.uk

# Vapi Configuration
REACT_APP_VAPI_PUBLIC_KEY=your_vapi_public_key_here
REACT_APP_VAPI_PRIVATE_KEY=your_vapi_private_key_here
REACT_APP_VAPI_ASSISTANT_ID=your_assistant_id_here
REACT_APP_VAPI_API_KEY=your_vapi_api_key_here
REACT_APP_VAPI_BASE_URL=https://api.vapi.ai

# Server Configuration
PORT=3000
