NEXT_PUBLIC_SUPABASE_URL=https://vzjqrbicwhyawtsjnplt.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=rLU!9BHe_FVh6BS
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_DB_PASSWORD=rLU!9BHe_FVh6BS

# Optional: Google Maps API (for enhanced location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Optional: Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Optional: Error Tracking
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://your-domain.vercel.app
NEXT_PUBLIC_CDN_URL=https://your-cdn-domain.com

# Feature Flags
NEXT_PUBLIC_ENABLE_GEOLOCATION=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Cache Configuration
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_MAX_CACHE_SIZE=100

# Search Configuration
NEXT_PUBLIC_DEFAULT_SEARCH_LIMIT=20
NEXT_PUBLIC_MAX_SEARCH_RESULTS=100
NEXT_PUBLIC_SEARCH_DEBOUNCE_MS=300

# Geolocation Configuration
NEXT_PUBLIC_DEFAULT_SEARCH_RADIUS=10
NEXT_PUBLIC_MAX_SEARCH_RADIUS=50
NEXT_PUBLIC_GEOLOCATION_TIMEOUT=10000

# Performance Configuration
NEXT_PUBLIC_PERFORMANCE_BUDGET_JS=250000
NEXT_PUBLIC_PERFORMANCE_BUDGET_CSS=100000
NEXT_PUBLIC_PERFORMANCE_BUDGET_IMAGES=500000

# Security Configuration
NEXT_PUBLIC_CSP_REPORT_URI=https://your-domain.report-uri.com/r/d/csp/enforce
NEXT_PUBLIC_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Monitoring Configuration
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_PERFORMANCE_THRESHOLD_MS=3000

# Backup Configuration (for migration)
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Migration Configuration
MIGRATION_BATCH_SIZE=50
MIGRATION_RETRY_ATTEMPTS=3
MIGRATION_RETRY_DELAY=1000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Database Configuration
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000
DB_QUERY_TIMEOUT=10000

# CDN Configuration
CDN_CACHE_CONTROL=public, max-age=31536000, immutable
CDN_IMAGE_OPTIMIZATION=true
CDN_COMPRESSION=true

# Email Configuration (if needed for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@your-domain.com
DEFAULT_ALERT_EMAIL=caregriduk@gmail.com

# Webhook Configuration (for real-time updates)
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_URL=https://your-domain.vercel.app/api/webhooks

# Third-party Integrations
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-token
NEXT_PUBLIC_OPENCAGE_API_KEY=your-opencage-api-key

# Development Tools
NEXT_PUBLIC_ENABLE_REACT_DEVTOOLS=true
NEXT_PUBLIC_ENABLE_REDUX_DEVTOOLS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_PROFILER=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/caregrid_test
TEST_SUPABASE_URL=https://test-project.supabase.co
TEST_SUPABASE_ANON_KEY=test-anon-key

# Deployment Configuration
