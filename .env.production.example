# CareGrid Production Environment Configuration
# Copy this file to .env.production and fill in your actual values
# NEVER commit actual secrets to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=CareGrid
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://caregrid.vercel.app

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Supabase Database URL (Primary)
DATABASE_URL=postgresql://postgres:[password]@[host]:[port]/[database]

# Supabase Configuration
SUPABASE_URL=https://[project-id].supabase.co
SUPABASE_ANON_KEY=eyJ[your-anon-key]
SUPABASE_SERVICE_ROLE_KEY=eyJ[your-service-role-key]

# Database Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_SSL=true

# =============================================================================
# CLOUD STORAGE CONFIGURATION
# =============================================================================
# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_FOLDER=caregrid-production

# Alternative: AWS S3 Configuration (if using S3)
# AWS_ACCESS_KEY_ID=AKIA[your-access-key]
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=caregrid-assets

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis Configuration
REDIS_URL=redis://:[password]@[host]:[port]
REDIS_TTL=3600

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Public API URL (accessible from frontend)
NEXT_PUBLIC_API_URL=https://caregrid.vercel.app/api

# API Settings
API_TIMEOUT=20000
API_RETRIES=5
API_RATE_LIMIT=100

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption Key for sensitive data
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=86400

# CORS Settings
CORS_ORIGIN=https://caregrid.vercel.app
CORS_CREDENTIALS=true

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SendGrid Configuration
SENDGRID_API_KEY=SG.[your-sendgrid-api-key]
SENDGRID_FROM_EMAIL=noreply@caregrid.com
SENDGRID_FROM_NAME=CareGrid

# Email Templates
EMAIL_VERIFICATION_TEMPLATE_ID=d-[template-id]
PASSWORD_RESET_TEMPLATE_ID=d-[template-id]
APPOINTMENT_CONFIRMATION_TEMPLATE_ID=d-[template-id]

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_[your-stripe-secret-key]
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_[your-stripe-publishable-key]
STRIPE_WEBHOOK_SECRET=whsec_[your-webhook-secret]

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIza[your-google-maps-api-key]

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=AC[your-twilio-account-sid]
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry Configuration (Error Monitoring)
SENTRY_DSN=https://[key]@[organization].ingest.sentry.io/[project-id]
SENTRY_ENVIRONMENT=production

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-[your-ga-tracking-id]

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=error
LOG_TO_CONSOLE=false
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/caregrid.log

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.caregrid.com

# Image Optimization
IMAGE_OPTIMIZATION_QUALITY=80
IMAGE_OPTIMIZATION_FORMAT=webp

# Caching
CACHE_STATIC_ASSETS=true
CACHE_API_RESPONSES=true
CACHE_TTL_STATIC=86400
CACHE_TTL_API=300

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
FEATURE_ONLINE_PAYMENTS=true
FEATURE_VIDEO_CONSULTATIONS=true
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_PUSH_NOTIFICATIONS=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Vercel Configuration
VERCEL=1
VERCEL_ENV=production
VERCEL_URL=caregrid.vercel.app

# Build Configuration
BUILD_ANALYZE=false
BUILD_SOURCEMAP=false

# =============================================================================
# HEALTH CHECK & MONITORING
# =============================================================================
# Health check endpoints
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/api/health

# Monitoring intervals (in seconds)
MONITOR_DATABASE=60
MONITOR_REDIS=30
MONITOR_EXTERNAL_APIS=120

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Database backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# SECURITY HEADERS
# =============================================================================
# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=/api/csp-report

# HSTS (HTTP Strict Transport Security)
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true

# =============================================================================
# RATE LIMITING
# =============================================================================
# API Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
# Webhook endpoints for external services
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT=5000

# =============================================================================
# DEVELOPMENT OVERRIDES (for staging/preview)
# =============================================================================
# These will be overridden in development/preview environments
# DEBUG_MODE=false
# VERBOSE_LOGGING=false
# MOCK_EXTERNAL_APIS=false