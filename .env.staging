# Staging Environment Configuration
# Public URLs for testing with sandbox services

# API Configuration
API_BASE=https://api-staging.caregrid.co.uk
PUBLIC_WEB_BASE=https://staging.caregrid.co.uk
N8N_BASE=https://n8n-staging.caregrid.co.uk

# Frontend URLs
FRONTEND_URL=https://staging.caregrid.co.uk
NEXT_PUBLIC_API_BASE_URL=https://api-staging.caregrid.co.uk

# Database Configuration (Staging Internal URL)
DATABASE_URL=postgresql://caregrid_user:password@dpg-staging-internal-url/caregrid_staging
# External Database URL for admin tools
EXTERNAL_DATABASE_URL=postgresql://caregrid_user:password@dpg-staging-external-url/caregrid_staging

# Vapi Webhook URLs
VAPI_TOOLS_WEBHOOK=https://n8n-staging.caregrid.co.uk/webhook/caregrid/voice/tools
VAPI_EVENTS_WEBHOOK=https://n8n-staging.caregrid.co.uk/webhook/caregrid/voice/events

# CDN Configuration
CDN_BASE_URL=https://staging.caregrid.co.uk

# Email Configuration (Sandbox)
EMAIL_SERVICE=sandbox
SMTP_HOST=smtp.sandbox-provider.com
SMTP_PORT=587
SMTP_SECURE=true

# SMS Configuration (Sandbox)
SMS_PROVIDER=sandbox
SMS_API_URL=https://api.sandbox-sms-provider.com

# Security
NODE_ENV=staging
TRUST_PROXY=true

# CORS Origins (comma-separated)
CORS_ORIGINS=https://staging.caregrid.co.uk,https://n8n-staging.caregrid.co.uk