# Backend Production Environment Configuration
# All URLs must be HTTPS and publicly accessible

# API Configuration
API_BASE=https://api.caregrid.co.uk
PUBLIC_WEB_BASE=https://caregrid.co.uk
N8N_BASE=https://n8n.caregrid.co.uk

# Frontend URLs
FRONTEND_URL=https://caregrid.co.uk
NEXT_PUBLIC_API_BASE_URL=https://api.caregrid.co.uk

# Database Configuration (Render Internal URL for services on Render)
DATABASE_URL=postgresql://caregrid_user:password@dpg-internal-url/caregrid_production
# External Database URL for admin tools outside Render
EXTERNAL_DATABASE_URL=postgresql://caregrid_user:password@dpg-external-url/caregrid_production

# Vapi Webhook URLs
VAPI_TOOLS_WEBHOOK=https://n8n.caregrid.co.uk/webhook/caregrid/voice/tools
VAPI_EVENTS_WEBHOOK=https://n8n.caregrid.co.uk/webhook/caregrid/voice/events

# CDN Configuration
CDN_BASE_URL=https://caregrid.co.uk

# Email Configuration (Production)
EMAIL_SERVICE=production
EMAIL_FROM=noreply@caregrid.co.uk
SMTP_HOST=smtp.production-provider.com
SMTP_PORT=587
SMTP_SECURE=true

# SMS Configuration (Production)
SMS_PROVIDER=production
SMS_API_URL=https://api.sms-provider.com

# Security
NODE_ENV=production
JWT_SECRET=your-super-secure-jwt-secret-key-for-production-min-32-chars
TRUST_PROXY=true

# CORS Origins (comma-separated)
CORS_ORIGINS=https://caregrid.co.uk,https://www.caregrid.co.uk,https://n8n.caregrid.co.uk